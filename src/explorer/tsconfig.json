{
    "extends": "../../tsconfig.json",
    "include": [
        "src",
        "*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules",
    ],
	"compilerOptions": {
		"jsx": "react-jsx",
        "moduleResolution": "bundler",
        "noEmit": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		}
	},
}
